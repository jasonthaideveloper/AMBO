<div class="container-fluid mt-3">
    <div>
        <h2>Danh sách đơn vị tính</h2>
        <div class="d-flex justify-content-between">
            <a href="don-vi-tinh/kho-luu-tru" type="button" class="btn btn-primary btn-sm"><i class="fas fa-archive"></i>
                Lưu trữ <span class="badge badge-light">{{deletedCount}}</span></a>
            <a type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#modal-add"><i
                    class="fas fa-plus"></i>
                Thêm mới</a>
        </div>
    </div>
    <div class="modal fade" id="modal-add" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-primary text-light">
                    <h5 class="modal-title" id="exampleModalLabel">Thêm mới</h5>
                    <button type="button" class="close text-light" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="add-unit" class="mt-3 mb-3" method="POST">
                        <label for="add-init">Đơn vị tính</label>
                        <div class="form-group">
                            <input type="text" class="form-control form-control-sm focus" id="add-unit" name="unitName"
                                value="{{this.unitName}}">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button id="btn-add-unit" type="submit" class="btn btn-primary btn-sm">Lưu lại</button>
                    <button type="submit" class="btn btn-secondary btn-sm" data-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>
    <div class="mt-3">
        <table class="table table-hover table-sm" id="unit-table">
            <thead>
                <tr class="text-center">
                    <th scope="col">#</th>
                    <th scope="col">Đơn vị tính</th>
                    <th scope="col">Hành động</th>
                </tr>
            </thead>
            <tbody>
                {{#each units}}
                <tr class="text-center">
                    <th scope="row">{{sum @index 1}}</th>
                    <td>{{this.unitName}}</td>
                    <td class="text-center">
                        <a type="button" class="mr-4" data-toggle="modal" data-id="{{this._id}}"
                            data-unit="{{this.unitName}}" data-target="#modal-edit">Sửa</a>
                        <a type="button" class="text-danger" data-toggle="modal" data-id="{{this._id}}" data-unit="{{this.unitName}}" data-target="#modal-delete">
                            Lưu trữ
                        </a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="modal-edit" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-info text-light">
                <h5 class="modal-title" id="exampleModalLabel">Sửa</h5>
                <button type="button" class="close text-light" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <label for="edit-unit">Đơn vị tính</label>
                <form name="edit-unit" class="mb-3" method="POST">
                    <input type="text" class="form-control form-control-sm focus" id="edit-unit" name="unitName">
                </form>
            </div>
            <div class="modal-footer">
                <button id="btn-edit-unit" type="submit" class="btn btn-info btn-sm">Lưu lại</button>
                <button type="submit" class="btn btn-secondary btn-sm" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

<form name="delete-unit" method="POST"></form>

<!-- Modal -->
<div class="modal fade" id="modal-delete" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-light">
                <h5 class="modal-title" id="exampleModalLabel">Lưu trữ</h5>
                <button type="button" class="close text-light" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button id="btn-delete-unit" type="submit" class="btn btn-danger btn-sm">Có</button>
                <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Không</button>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function (event) {
        var unitId, unit;
        var addUnit = document.forms['add-unit'];
        var editUnit = document.forms['edit-unit'];
        var deleteUnit = document.forms['delete-unit'];
        var btnAddUnit = document.getElementById('btn-add-unit');
        var btnEditUnit = document.getElementById('btn-edit-unit');
        var btnDeleteUnit = document.getElementById('btn-delete-unit');

        btnAddUnit.onclick = function () {
            addUnit.submit();
        }

        $('#modal-edit').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            unitId = button.data('id');
            unit = button.data('unit');
            var modal = $(this);
            modal.find('.modal-body input').val(unit);
        })

        btnEditUnit.onclick = function () {
            editUnit.action = '/don-vi-tinh/' + unitId + '?_method=PUT';
            editUnit.submit();
        }

        $('#modal-delete').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            unitId = button.data('id');
            unit = button.data('unit');
            var modal = $(this);
            modal.find('.modal-body').text('Bạn có chắc muốn đưa ' + unit + ' vào kho lưu trữ không?');
        })

        btnDeleteUnit.onclick = function () {
            deleteUnit.action = '/don-vi-tinh/' + unitId + '/storage?_method=DELETE';
            deleteUnit.submit();
        }

        $(document).ready(function () {
            $('#unit-table').DataTable();
        });
    })
</script>