<div class="container-fluid mt-3">
    <div>
        <h2 class="text-primary">Danh sách Sản phẩm</h2>
        <div class="d-flex justify-content-between mt-4">
            <a href="san-pham/kho-luu-tru" type="button" class="btn btn-outline-danger"><i class="fas fa-archive mr-2"></i>Kho lưu trữ<span class="badge badge-info ml-3">{{deletedCount}}</span></a>
            <a type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#modal-add"><i class="fas fa-plus mr-2"></i>Thêm mới</a>
        </div>
    </div>
    <div class="mt-4">
        <table class="table table-hover table-sm" id="product-table">
            <thead>
                <tr class="text-center">
                    <th scope="col">#</th>
                    <th scope="col">Mã sản phẩm</th>
                    <th scope="col">Tên sản phẩm</th>
                    <th scope="col">Loại sản phẩm</th>
                    <th scope="col">Giá trị</th>
                    <th scope="col">Thuộc tính</th>
                    <th scope="col">Đơn vị</th>
                    <th scope="col">Giá nhập</th>
                    <th scope="col">Giá bán</th>
                    <th scope="col">Nhà cung cấp</th>
                    <th scope="col">Hành động</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr class="text-center">
                    <th scope="row">{{sum @index 1}}</th>
                    <td>{{this.productId}}</td>
                    <td><a href="/chi-tiet">{{this.productName}}</a></td>
                    <td>{{this.productType}}</td>
                    <td>{{this.value}}</td>
                    <td>{{this.propertyType}}</td>
                    <td>{{this.unit}}</td>
                    <td>{{this.productPriceIn}}</td>
                    <td>{{this.productPriceOut}}</td>
                    <td>{{this.supplier}}</td>
                    <td class="text-center">
                        <a type="button" class="btn btn-outline-info btn-sm mr-2" data-toggle="modal"
                            data-id="{{this._id}}" data-product-id="{{this.productId}}"
                            data-product-name="{{this.productName}}" data-product-type="{{this.productType}}"
                            data-product-value="{{this.value}}" data-product-property-type="{{this.propertyType}}"
                            data-product-unit="{{this.unit}}" data-product-price-in="{{this.productPriceIn}}"
                            data-product-price-out="{{this.productPriceOut}}" data-product-supplier="{{this.supplier}}"
                            data-product-description="{{this.description}}" data-target="#modal-edit">Chỉnh sửa</a>
                        <a type="button" class="btn btn-outline-danger btn-sm" data-toggle="modal"
                            data-id="{{this._id}}" data-product-name="{{this.productName}}" data-target="#modal-delete">
                            Lưu trữ
                        </a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="modal-add" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary text-light">
                <h5 class="modal-title" id="exampleModalLabel">Thêm mới</h5>
                <button type="button" class="close text-light" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="add-product" class="mb-3" method="POST">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4">
                                <label for="product-id">Mã sản phẩm</label>
                                <input type="text" class="form-control form-control-sm focus" id="product-id"
                                    name="productId">
                            </div>
                            <div class="col-md-4">
                                <label for="product-name">Tên sản phẩm</label>
                                <input type="text" class="form-control form-control-sm focus" id="product-name"
                                    name="productName">
                            </div>
                            <div class="col-md-4">
                                <label for="product-type">Loại sản phẩm</label>
                                <select class="form-control form-control-sm mr-sm-2" id="product-type"
                                    name="productType">
                                    {{#each types}}
                                    <option value="{{this.typeName}}">{{this.typeName}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-4">
                                <label for="product-value">Giá trị</label>
                                <input type="text" class="form-control form-control-sm focus" id="product-value"
                                    name="value">
                            </div>
                            <div class="col-md-4">
                                <label for="product-property">Thuộc tính</label>
                                <select class="form-control form-control-sm" id="product-property"
                                    name="propertyType">
                                    {{#each properties}}
                                    <option value="{{this.propertyName}}">{{this.propertyName}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label for="product-unit">Đơn vị tính</label>
                                <select class="form-control form-control-sm" id="product-unit" name="unit">
                                    {{#each units}}
                                    <option value="{{this.unitName}}">{{this.unitName}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-4">
                                <label for="product-price-in">Giá nhập</label>
                                <input type="text" class="form-control form-control-sm focus text-right"
                                    id="product-price-in" name="productPriceIn">
                            </div>
                            <div class="col-md-4">
                                <label for="product-price-out">Giá bán</label>
                                <input type="text" class="form-control form-control-sm focus text-right"
                                    id="product-price-out" name="productPriceOut">
                            </div>
                            <div class="col-md-4">
                                <label for="product-supplier">Nhà cung cấp</label>
                                <select class="form-control form-control-sm mr-sm-2" id="product-supplier"
                                    name="supplier">
                                    <option selected>Chọn nhà cung cấp...</option>
                                    {{#each suppliers}}
                                    <option value="{{this.supplierName}}">{{this.supplierName}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                        {{!-- <div class="row mt-3"> --}}
                            {{!-- <div class="col-md-4"> --}}
                                {{!-- <img src="..." alt="..." class="img-thumbnail">
                                <label for="supplier-img" class="btn btn-secondary">Chọn hình ảnh</label>
                                <input style="visibility:hidden;" type="file" class="form-control-file"
                                    placeholder="Chọn hình ảnh" id="supplier-img"> --}}

                                {{!--
                            </div> --}}
                        {{!-- </div> --}}
                        <label for="product-description">Mô tả</label>
                        <textarea class="form-control form-control-sm" id="product-description" rows="3"
                            name="description"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button id="btn-add" type="button" class="btn btn-primary">Lưu lại</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modal-delete" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-light">
                <h5 class="modal-title" id="exampleModalLabel">Lưu trữ</h5>
                <button type="button" class="close text-light" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button id="btn-delete-product" type="submit" class="btn btn-danger">Có</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Không</button>
            </div>
        </div>
    </div>
</div>

<form name="delete-product" method="POST"></form>

