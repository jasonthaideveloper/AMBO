<div class="container-fluid mt-3">
    <div>
        <h2 class="text-primary">Danh sách Sản phẩm</h2>
        <div class="d-flex justify-content-between mt-4">
            <a href="san-pham/kho-luu-tru" type="button" class="btn btn-outline-danger"><i
                    class="fas fa-archive mr-2"></i>Kho lưu trữ<span
                    class="badge badge-info ml-3">{{deletedCount}}</span></a>
            <a type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#modal-add"><i
                    class="fas fa-plus mr-2"></i>Thêm mới</a>
        </div>
    </div>
    <div class="mt-4">
        <table class="table table-hover table-sm" id="product-table">
            <thead>
                <tr class="text-center">
                    <th scope="col">#</th>
                    <th scope="col">Mã sản phẩm</th>
                    <th scope="col">Tên sản phẩm</th>
                    <th scope="col">Loại sản phẩm</th>
                    <th scope="col">Giá trị</th>
                    <th scope="col">Thuộc tính</th>
                    <th scope="col">Đơn vị</th>
                    <th scope="col">Giá nhập</th>
                    <th scope="col">Giá bán</th>
                    <th scope="col">Nhà cung cấp</th>
                    <th scope="col">Hành động</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr class="text-center">
                    <th scope="row">{{sum @index 1}}</th>
                    <td>{{this.productId}}</td>
                    <td><a href="" class="text-decoration-none" data-id="{{this._id}}"
                            data-product-detail-id="{{this.productId}}" data-product-detail-name="{{this.productName}}"
                            data-product-detail-type="{{this.productType}}" data-product-detail-value="{{this.value}}"
                            data-product-detail-property-type="{{this.propertyType}}"
                            data-product-detail-unit="{{this.unit}}"
                            data-product-detail-price-in="{{this.productPriceIn}}"
                            data-product-detail-price-out="{{this.productPriceOut}}"
                            data-product-detail-supplier="{{this.supplier}}"
                            data-product-detail-description="{{this.description}}" data-toggle="modal"
                            data-target="#modal-detail-product">{{this.productName}}</a></td>
                    <td>{{this.productType}}</td>
                    <td>{{this.value}}</td>
                    <td>{{this.propertyType}}</td>
                    <td>{{this.unit}}</td>
                    <td>{{this.productPriceIn}}</td>
                    <td>{{this.productPriceOut}}</td>
                    <td>{{this.supplier}}</td>
                    <td class="text-center">
                        <a type="button" class="btn btn-outline-info btn-sm mr-2" data-toggle="modal"
                            data-id="{{this._id}}" data-product-id="{{this.productId}}"
                            data-product-name="{{this.productName}}" data-product-type="{{this.productType}}"
                            data-product-value="{{this.value}}" data-product-property-type="{{this.propertyType}}"
                            data-product-unit="{{this.unit}}" data-product-price-in="{{this.productPriceIn}}"
                            data-product-price-out="{{this.productPriceOut}}" data-product-supplier="{{this.supplier}}"
                            data-product-description="{{this.description}}" data-product-img="{{this.img}}"
                            data-target="#modal-edit">Chỉnh sửa</a>
                        <a type="button" class="btn btn-outline-danger btn-sm" data-toggle="modal"
                            data-id="{{this._id}}" data-product-name="{{this.productName}}" data-target="#modal-delete">
                            Lưu trữ
                        </a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="modal-detail-product" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <div class="d-flex justify-content-between">
                    <h5 class="modal-title text-light">Thông tin sản phẩm</h5>
                </div>
                <button type="button" class="close text-light" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <ul class="list-group">
                    <p id="product-detail-id"></p>
                    <p id="product-detail-name"></p>
                    <p id="product-detail-type"></p>
                    <p id="product-detail-value"></p>
                    <p id="product-detail-property-type"></p>
                    <p id="product-detail-unit"></p>
                    <p id="product-detail-price-in"></p>
                    <p id="product-detail-price-out"></p>
                    <p id="product-detail-supplier"></p>
                    <label for="">Mô tả:</label>
                    <p class="text-justify" id="product-detail-description"></p>
                </ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modal-add" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary text-light">
                <h5 class="modal-title" id="exampleModalLabel">Thêm mới</h5>
                <button type="button" class="close text-light" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-9">
                        <form id="add-product" class="mb-3" method="POST">
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-8">
                                        <label for="product-id">Mã sản phẩm</label>
                                        <input type="text" class="form-control form-control-sm focus" id="product-id"
                                            name="productId">

                                    </div>
                                    <div class="col-md-4">
                                        <label for="product-name">Tên sản phẩm</label>
                                        <input type="text" class="form-control form-control-sm focus" id="product-name"
                                            name="productName">
                                    </div>
                                    <div class="col-md-4">
                                        <label for="product-type">Loại sản phẩm</label>
                                        <select class="form-control form-control-sm mr-sm-2" id="product-type"
                                            name="productType">
                                            {{#each types}}
                                            <option value="{{this.typeName}}">{{this.typeName}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-md-4">
                                        <label for="product-value">Giá trị</label>
                                        <input type="text" class="form-control form-control-sm focus" id="product-value"
                                            name="value">
                                    </div>
                                    <div class="col-md-4">
                                        <label for="product-property">Thuộc tính</label>
                                        <select class="form-control form-control-sm" id="product-property"
                                            name="propertyType">
                                            {{#each properties}}
                                            <option value="{{this.propertyName}}">{{this.propertyName}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                    <div class="col-md-4">
                                        <label for="product-unit">Đơn vị tính</label>
                                        <select class="form-control form-control-sm" id="product-unit" name="unit">
                                            {{#each units}}
                                            <option value="{{this.unitName}}">{{this.unitName}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-md-4">
                                        <label for="product-price-in">Giá nhập</label>
                                        <input type="text" class="form-control form-control-sm focus text-right"
                                            id="product-price-in" name="productPriceIn">
                                    </div>
                                    <div class="col-md-4">
                                        <label for="product-price-out">Giá bán</label>
                                        <input type="text" class="form-control form-control-sm focus text-right"
                                            id="product-price-out" name="productPriceOut">
                                    </div>
                                    <div class="col-md-4">
                                        <label for="product-supplier">Nhà cung cấp</label>
                                        <select class="form-control form-control-sm mr-sm-2" id="product-supplier"
                                            name="supplier">
                                            <option selected>Chọn nhà cung cấp...</option>
                                            {{#each suppliers}}
                                            <option value="{{this.supplierName}}">{{this.supplierName}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                </div>
                                <label for="product-description">Mô tả</label>
                                <textarea class="form-control form-control-sm" id="product-description" rows="3"
                                    name="description"></textarea>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btn-add" type="button" class="btn btn-primary">Lưu lại</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modal-delete" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-light">
                <h5 class="modal-title" id="exampleModalLabel">Lưu trữ</h5>
                <button type="button" class="close text-light" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button id="btn-delete-product" type="submit" class="btn btn-danger">Có</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Không</button>
            </div>
        </div>
    </div>
</div>

<form name="delete-product" method="POST"></form>

<div class="modal fade" id="modal-edit" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-info text-light">
                <h5 class="modal-title" id="exampleModalLabel">Sửa</h5>
                <button type="button" class="close text-light" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="edit-product" class="mb-3" method="POST">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4">
                                <label for="product-id">Mã sản phẩm</label>
                                <input disabled type="text" class="form-control form-control-sm focus" id="product-id"
                                    name="productId">
                            </div>
                            <div class="col-md-4">
                                <label for="product-name">Tên sản phẩm</label>
                                <input type="text" class="form-control form-control-sm focus" id="product-name"
                                    name="productName">
                            </div>
                            <div class="col-md-4">
                                <label for="product-type">Loại sản phẩm</label>
                                <select class="form-control form-control-sm mr-sm-2" id="product-type"
                                    name="productType">
                                    {{#each types}}
                                    <option value="{{this.typeName}}">{{this.typeName}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-4">
                                <label for="product-value">Giá trị</label>
                                <input type="text" class="form-control form-control-sm focus" id="product-value"
                                    name="value">
                            </div>
                            <div class="col-md-4">
                                <label for="product-property">Thuộc tính</label>
                                <select class="form-control form-control-sm" id="product-property" name="propertyType">
                                    {{#each properties}}
                                    <option value="{{this.propertyName}}">{{this.propertyName}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label for="product-unit">Đơn vị tính</label>
                                <select class="form-control form-control-sm" id="product-unit" name="unit">
                                    {{#each units}}
                                    <option value="{{this.unitName}}">{{this.unitName}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-4">
                                <label for="product-price-in">Giá nhập</label>
                                <input type="text" class="form-control form-control-sm focus text-right"
                                    id="product-price-in" name="productPriceIn">
                            </div>
                            <div class="col-md-4">
                                <label for="product-price-out">Giá bán</label>
                                <input type="text" class="form-control form-control-sm focus text-right"
                                    id="product-price-out" name="productPriceOut">
                            </div>
                            <div class="col-md-4">
                                <label for="product-supplier">Nhà cung cấp</label>
                                <select class="form-control form-control-sm mr-sm-2" id="product-supplier"
                                    name="supplier">
                                    {{#each suppliers}}
                                    <option value="{{this.supplierName}}">{{this.supplierName}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                        <div class="mt-3">
                            <label for="product-description">Mô tả</label>
                            <textarea class="form-control form-control-sm" id="product-description" rows="3"
                                name="description"></textarea>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button id="btn-edit-product" type="submit" class="btn btn-info">Lưu lại</button>
                <button type="submit" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function (event) {
        var productDataId, product, productId;
        var addProduct = document.forms['add-product'];
        var editProduct = document.forms['edit-product'];
        var deleteProduct = document.forms['delete-product'];
        var btnAddProduct = document.getElementById('btn-add');
        var btnEditProduct = document.getElementById('btn-edit-product');
        var btnDeleteProduct = document.getElementById('btn-delete-product');

        btnAddProduct.onclick = function () {
            addProduct.submit();
        }

        $('#modal-detail-product').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            productDataId = button.data('id');
            productDetailId = button.data('product-detail-id');
            productDetailName = button.data('product-detail-name');
            productDetailPriceIn = button.data('product-detail-price-in');
            productDetailPriceOut = button.data('product-detail-price-out');
            productDetailType = button.data('product-detail-type');
            productDetailProperty = button.data('product-detail-property-type');
            productDetailValue = button.data('product-detail-value');
            productDetailUnit = button.data('product-detail-unit');
            productDetailSupplier = button.data('product-detail-supplier');
            productDetailDescription = button.data('product-detail-description');
            var modal = $(this);
            modal.find('.modal-body #product-detail-id').text('Mã: ' + productDetailId);
            modal.find('.modal-body #product-detail-name').text('Tên: ' + productDetailName);
            modal.find('.modal-body #product-detail-type').text('Loại: ' + productDetailType);
            modal.find('.modal-body #product-detail-price-in').text('Giá nhập: ' + productDetailPriceIn);
            modal.find('.modal-body #product-detail-property-type').text('Thuộc tính: ' + productDetailProperty);
            modal.find('.modal-body #product-detail-price-out').text('Giá xuất: ' + productDetailPriceOut);
            modal.find('.modal-body #product-detail-value').text('Giá trị: ' + productDetailValue);
            modal.find('.modal-body #product-detail-unit').text('Đơn vị: ' + productDetailUnit);
            modal.find('.modal-body #product-detail-supplier').text('NCC: ' + productDetailSupplier);
            modal.find('.modal-body #product-detail-description').text(productDetailDescription);
        })

        $('#modal-edit').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            productDataId = button.data('id');
            productId = button.data('product-id');
            productName = button.data('product-name');
            productPriceIn = button.data('product-price-in');
            productPriceOut = button.data('product-price-out');
            productType = button.data('product-type');
            productProperty = button.data('product-property-type');
            productValue = button.data('product-value');
            productUnit = button.data('product-unit');
            productSupplier = button.data('product-supplier');
            productDescription = button.data('product-description');
            var modal = $(this);
            modal.find('.modal-body #product-id').val(productId);
            modal.find('.modal-body #product-name').val(productName);
            modal.find('.modal-body #product-price-in').val(productPriceIn);
            modal.find('.modal-body #product-price-out').val(productPriceOut);
            modal.find('.modal-body #product-type').val(productType);
            modal.find('.modal-body #product-property').val(productProperty);
            modal.find('.modal-body #product-value').val(productValue);
            modal.find('.modal-body #product-unit').val(productUnit);
            modal.find('.modal-body #product-supplier').val(productSupplier);
            modal.find('.modal-body #product-description').val(productDescription);
        })

        btnEditProduct.onclick = function () {
            editProduct.action = '/san-pham/' + productDataId + '?_method=PUT';
            editProduct.submit();
        }

        $('#modal-delete').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            productDataId = button.data('id');
            productName = button.data('product-name');
            var modal = $(this);
            modal.find('.modal-body').text('Bạn có chắc muốn đưa ' + productName + ' vào kho lưu trữ không?');
        })

        btnDeleteProduct.onclick = function () {
            deleteProduct.action = '/san-pham/' + productDataId + '/storage?_method=DELETE';
            deleteProduct.submit();
        }

        $(document).ready(function () {
            $('#product-table').DataTable();
        });

        $(document).ready(function () {
            let imagesPreview = function (input, placeToInsertImagePreview) {
                if (input.files) {
                    let filesAmount = input.files.length;
                    for (i = 0; i < filesAmount; i++) {
                        let reader = new FileReader();
                        reader.onload = function (event) {
                            $($.parseHTML("<img>"))
                                .attr("src", event.target.result)
                                .appendTo(placeToInsertImagePreview);
                        };
                        reader.readAsDataURL(input.files[i]);
                    }
                }
            };
            $("#input-files").on("change", function () {
                imagesPreview(this, "div.preview-images");
            });
        });
    })
</script>