                                {{!-- <img src="..." alt="..." class="img-thumbnail">
                                <label for="supplier-img" class="btn btn-secondary">Chọn hình ảnh</label>
                                <input style="visibility:hidden;" type="file" class="form-control-file"
                                    placeholder="Chọn hình ảnh" id="supplier-img"> --}}

                                {{!--
                            </div> --}}
                        </div>
                        <label for="product-description">Mô tả</label>
                        <textarea class="form-control form-control-sm" id="product-description" rows="3"
                            name="description"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button id="btn-edit-product" type="submit" class="btn btn-info">Lưu lại</button>
                <button type="submit" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function (event) {
        var productDataId, product, productId;
        var addProduct = document.forms['add-product'];
        var editProduct = document.forms['edit-product'];
        var deleteProduct = document.forms['delete-product'];
        var btnAddProduct = document.getElementById('btn-add');
        var btnEditProduct = document.getElementById('btn-edit-product');
        var btnDeleteProduct = document.getElementById('btn-delete-product');

        btnAddProduct.onclick = function () {
            addProduct.submit();
        }

        $('#modal-edit').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            productDataId = button.data('id');
            productId = button.data('product-id');
            productName = button.data('product-name');
            productPriceIn = button.data('product-price-in');
            productPriceOut = button.data('product-price-out');
            productType = button.data('product-type');
            productProperty = button.data('product-property-type');
            productValue = button.data('product-value');
            productUnit = button.data('product-unit');
            productSupplier = button.data('product-supplier');
            productDescription = button.data('product-description');
            var modal = $(this);
            modal.find('.modal-body #product-id').val(productId);
            modal.find('.modal-body #product-name').val(productName);
            modal.find('.modal-body #product-price-in').val(productPriceIn);
            modal.find('.modal-body #product-price-out').val(productPriceOut);
            modal.find('.modal-body #product-type').val(productType);
            modal.find('.modal-body #product-property').val(productProperty);
            modal.find('.modal-body #product-value').val(productValue);
            modal.find('.modal-body #product-unit').val(productUnit);
            modal.find('.modal-body #product-supplier').val(productSupplier);
            modal.find('.modal-body #product-description').val(productDescription);
        })

        btnEditProduct.onclick = function () {
            editProduct.action = '/san-pham/' + productDataId + '?_method=PUT';
            editProduct.submit();
        }

        $('#modal-delete').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            productDataId = button.data('id');
            productName = button.data('product-name');
            var modal = $(this);
            modal.find('.modal-body').text('Bạn có chắc muốn đưa ' + productName + ' vào kho lưu trữ không?');
        })

        btnDeleteProduct.onclick = function () {
            deleteProduct.action = '/san-pham/' + productDataId + '/storage?_method=DELETE';
            deleteProduct.submit();
        }

        $(document).ready(function () {
            $('#product-table').DataTable();
        });
    })
</script>