                                    <option value="{{this.propertyName}}">{{this.propertyName}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label for="product-unit">Đơn vị tính</label>
                                <select class="form-control form-control-sm" id="product-unit" name="unit">
                                    {{#each units}}
                                    <option value="{{this.unitName}}">{{this.unitName}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-4">
                                <label for="product-price-in">Giá nhập</label>
                                <input type="text" class="form-control form-control-sm focus text-right"
                                    id="product-price-in" name="productPriceIn">
                            </div>
                            <div class="col-md-4">
                                <label for="product-price-out">Giá bán</label>
                                <input type="text" class="form-control form-control-sm focus text-right"
                                    id="product-price-out" name="productPriceOut">
                            </div>
                            <div class="col-md-4">
                                <label for="product-supplier">Nhà cung cấp</label>
                                <select class="form-control form-control-sm mr-sm-2" id="product-supplier"
