<div class="container-fluid mt-3">
    <h2>Danh sách quận / huyện</h2>
    <ul class="list-group mt-3">
        <li class="list-group-item">
            <form class="mt-3 mb-3 form-inline" method="POST" action="quan-huyen">
                <label for="district" class="mr-3">Quận / Huyện</label>
                {{!-- <div class="row">
                    <div class="col-lg-4"> --}}
                        <div class="form-group mr-3">
                            <input type="text" class="form-control" id="district" name="district">
                        </div>
                    {{!-- </div>
                    <div class="col-lg-4"> --}}
                        <select name="cities" id="inputState" class="form-control mr-3">
                            <option selected>Chọn thành phố...</option>
                            {{#each cities}}
                            <option value="{{this.cityprovince}}">{{this.cityprovince}}</option>
                            {{/each}}
                        </select>
                    {{!-- </div>
                    <div class="col-lg-4"> --}}

                        <button type="submit" class="btn btn-primary">Thêm</button>
                    {{!-- </div> --}}
                {{!-- </div> --}}
            </form>
            <table class="table table-hover table-sm" id="#myTable">
                <thead>
                    <tr class="text-center">
                        <th scope="col">#</th>
                        <th scope="col">Quận / Huyện</th>
                        <th scope="col">Tỉnh / Thành phố</th>
                        <th scope="col">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each districts}}
                    <tr class="text-center">
                        <th scope="row">{{sum @index 1}}</th>
                        <td>{{this.district}}</td>
                        <td>{{this.cities}}</td>
                        <td class="text-center">
                            <a href="/tinh-thanh-pho/{{this._id}}" class="btn btn-link">Sửa</a>
                            <a href="" class="btn btn-link text-danger">Xóa</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </li>
    </ul>
</div>