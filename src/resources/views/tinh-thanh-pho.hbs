        //var btnUpdateDistrict = document.getElementById('btn-update-district');
        var btnEditCityProvince = document.getElementById('btn-edit-cityprovince');
        var btnDeleteCityProvince = document.getElementById('btn-delete-cityprovince');
        var btnDeleteDistrict = document.getElementById('btn-delete-district');

        btnAddCityProvince.onclick = function () {
            addCity.submit();
        }

        //$('#modal-update').on('show.bs.modal', function (event) {
