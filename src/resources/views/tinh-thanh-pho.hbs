            //updateDistrict.submit()
        //}

        $('#modal-delete-district').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            value = button.data('value');
            district = button.data('district');
            districtId = button.data('id');
            var modal = $(this);
            modal.find('.modal-body').text('Bạn có chắc muốn xóa vĩnh viễn Quận / Huyện: ' + cityprovinceId + ' này không?');
        })

        btnDeleteDistrict.onclick = function () {
            deleteDistrict.action = '/tinh-thanh-pho/' + districtId + '/district?_method=DELETE';
            deleteDistrict.submit();
        }

        $('#modal-edit').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            cityprovinceId = button.data('id');
            cityprovince = button.data('cityprovince');
            district = button.data('district');
            var modal = $(this);
            modal.find('.modal-body #edit-city').val(cityprovince);
            modal.find('.modal-body #update-district').val(district);
        })

        btnEditCityProvince.onclick = function () {
            editCity.action = '/tinh-thanh-pho/' + cityprovinceId + '?_method=PUT';
            editCity.submit();
        }

        $('#modal-delete').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            cityprovinceId = button.data('id');
            cityprovince = button.data('cityprovince');
            var modal = $(this);
            modal.find('.modal-body').text('Bạn có chắc muốn đưa ' + cityprovince + ' vào kho lưu trữ không?');
        })

        btnDeleteCityProvince.onclick = function () {
            deleteCity.action = '/tinh-thanh-pho/' + cityprovinceId + '/storage?_method=DELETE';
            deleteCity.submit();
        }

        $(document).ready(function () {
            $('#cityprovince-table').DataTable();
        });
    })
</script>