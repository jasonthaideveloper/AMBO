<div class="container-fluid mt-3">
    <h2>Danh sách Tỉnh / Thành phố</h2>
    <ul class="list-group mt-3">
        <li class="list-group-item">
            <form id="city" class="mt-3 mb-3 form-inline" method="POST">
                <label for="city">Tỉnh / Thành phố</label>
                <div class="form-group mr-3 ml-3">
                    <input type="text" class="form-control focus" id="city" name="cityprovince" value="{{city.cityprovince}}">
                </div>
                <button type="submit" class="btn btn-primary">Thêm</button>
            </form>
            <table class="table table-hover table-sm" id="#myTable">
                <thead>
                    <tr class="text-center">
                        <th scope="col">#</th>
                        <th scope="col">Tỉnh / Thành phố</th>
                        <th scope="col">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each cities}}
                    <tr class="text-center">
                        <th scope="row">{{sum @index 1}}</th>
                        <td>{{this.cityprovince}}</td>
                        <td class="text-center">
                            
                            <div class="modal fade" id="modal-edit" tabindex="-1" aria-labelledby="exampleModalLabel"
                                aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Sửa Tỉnh / Thành phố</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>

                                        <div class="modal-body">
                                            <form id="city-form" method="POST">
                                                <div class="form-group">
                                                    <input type="text" class="form-control focus" id="city"
                                                        name="cityprovince" value="{{city.cityprovince}}">
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="submit" class="btn btn-primary">Lưu</button>
                                                    <button type="button" class="btn btn-secondary"
                                                        data-dismiss="modal">Close</button>
                                                </div>
                                            </form>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            {{!-- <a href="/tinh-thanh-pho/{{this._id}}/edit" type="button" class="btn btn-link"
                                data-toggle="modal" data-target="#modal-edit">
                                Sửa {{this.cityprovince}}
                            </a> --}}
                            <a href="/tinh-thanh-pho/{{this._id}}/edit" class="btn btn-link">Sửa</a>
                            <a href="" class="btn btn-link text-danger">Xóa</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </li>
    </ul>
</div>
